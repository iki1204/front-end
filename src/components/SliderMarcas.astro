import { getPageData } from "../lib/api";

const API_URL = import.meta.env.VITE_STRAPI_URL;
const response = await getPageData("home-page");

const sliderMarcasSection = response?.data?.[0]?.Secciones?.find(
  (s) => s.__component === "shared.slider"
);

const img = sliderMarcasSection?.files?.map((img) => `${API_URL}${img.url}`) ?? [];



