 <script>
    (() => {
      const form = document.getElementById("storeSearchForm");
      const input = document.getElementById("storeSearchInput");
      const suggestionContainer = document.getElementById("searchSuggestionList");

      if (!(form instanceof HTMLFormElement) || !(input instanceof HTMLInputElement)) return;

      const suggestionButtons = Array.from(
        suggestionContainer?.querySelectorAll<HTMLButtonElement>("[data-suggestion-value]") ?? []
      );

      let lastValue = input.value;

      const submitForm = () => {
        form.requestSubmit();
      };

      const toggleDropdown = (shouldShow: boolean) => {
        if (!suggestionContainer) return;

        suggestionContainer.classList.toggle("hidden", !shouldShow);
        input.setAttribute("aria-expanded", String(shouldShow));
      };

      const filterSuggestions = () => {
        const term = input.value.trim().toLowerCase();
        let visibleCount = 0;

        suggestionButtons.forEach((button) => {
          const value = button.dataset.suggestionValue ?? "";
          const matches = term !== "" && value.toLowerCase().includes(term);
          button.classList.toggle("hidden", !matches);
          if (matches) visibleCount += 1;
        });

        toggleDropdown(visibleCount > 0);
      };

      suggestionContainer?.addEventListener("click", (event) => {
        const target =
          event.target instanceof HTMLElement
            ? event.target.closest<HTMLButtonElement>("[data-suggestion-value]")
            : null;

        if (!target) return;

        const value = target.dataset.suggestionValue ?? "";
        input.value = value;
        toggleDropdown(false);
        submitForm();
      });

      input.addEventListener("input", () => {
        filterSuggestions();

        if (lastValue && input.value.trim() === "") {
          toggleDropdown(false);
          submitForm();
        }

        lastValue = input.value;
      });

      input.addEventListener("focus", () => {
        filterSuggestions();
      });

      input.addEventListener("blur", () => {
        window.setTimeout(() => {
          const active = document.activeElement;
          const isInsideDropdown =
            suggestionContainer && active instanceof Node && suggestionContainer.contains(active);
          const isInputFocused = active === input;

          if (!isInsideDropdown && !isInputFocused) {
            toggleDropdown(false);
          }
        }, 50);
      });

      document.addEventListener("mousedown", (event) => {
        const target = event.target;

        if (
          target instanceof Node &&
          suggestionContainer &&
          !suggestionContainer.contains(target) &&
          !input.contains(target)
        ) {
          toggleDropdown(false);
        }
      });

      input.addEventListener("search", () => {
        if (input.value.trim() === "") {
          toggleDropdown(false);
          submitForm();
        }
      });

      filterSuggestions();
    })();
  </script>
  
