                          <a
                            href={Astro.url.pathname + buildQueryString({ search: suggestion.value, page: 1 })}
                            class="flex items-center gap-3 rounded-xl px-3 py-2 text-sm text-zinc-700 transition hover:-translate-y-px hover:bg-primary/10 hover:text-primary hover:shadow-sm dark:text-zinc-200 dark:hover:bg-red-900/40 dark:hover:text-red-200"
                          >
                            <span class="flex h-8 w-8 items-center justify-center rounded-lg bg-zinc-100 text-[11px] font-semibold text-zinc-600 dark:bg-zinc-800 dark:text-zinc-300">
                              {suggestion.label.slice(0, 2).toUpperCase()}
                            </span>
                            <span class="font-medium">{suggestion.label}</span>
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
              <input type="hidden" name="category" value={categoryParam} />
              <input type="hidden" name="page" value="1" />
              <button
                type="submit"
                class="rounded-2xl bg-primary px-6 py-3 text-sm font-semibold text-white transition hover:brightness-110"
              >
                Buscar
              <svg viewBox="0 0 24 24" class="h-6 w-6 mx-2 inline-flex" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M11 6C13.7614 6 16 8.23858 16 11M16.6588 16.6549L21 21M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
              </button>
            </form>
            <p class="text-sm text-zinc-700 dark:text-zinc-200">
              Mostrando <strong>{productos.length}</strong> de <strong>{totalItems}</strong> productos disponibles.
            </p>
          </header>

          <script is:inline>
            const suggestionScope = document.querySelector("[data-search-suggestions]");
            if (suggestionScope) {
              const input = suggestionScope.querySelector("input[type='search']");
              const panel = suggestionScope.querySelector("[data-suggestions-panel]");
              const items = Array.from(suggestionScope.querySelectorAll("[data-suggestion-item]"));
              const maxVisible = 6;
              const form = suggestionScope.closest("form");
              let lastQuery = input?.value.trim().toLowerCase() ?? "";

              const updateSuggestions = () => {
                if (!panel || !input) return;
                const query = input.value.trim().toLowerCase();
                const terms = query.split(/\s+/).filter(Boolean);
                let visibleCount = 0;

                items.forEach((item) => {
                  const value = item.getAttribute("data-suggestion-value") || "";
                  const matches =
                    terms.length > 0 && terms.every((term) => value.includes(term));
                  const show = matches && visibleCount < maxVisible;
                  item.classList.toggle("hidden", !show);
                  if (show) {
                    visibleCount += 1;
                  }
                });

                panel.classList.toggle("hidden", query.length === 0 || visibleCount === 0);

                if (query.length === 0 && lastQuery.length > 0) {
                  form?.requestSubmit();
                }

                lastQuery = query;
              };

              input?.addEventListener("input", updateSuggestions);
              input?.addEventListener("focus", updateSuggestions);
              input?.addEventListener("blur", () => {
                if (panel) {
                  setTimeout(() => panel.classList.add("hidden"), 150);
                }
              });
            }
          </script>

          {productos.length > 0 ? (
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 w-full">
              {productos.map((producto) => (
                <ProductCard producto={producto} />
              ))}
            </div>
          ) : (
            <div class="rounded-3xl border border-dashed border-zinc-300 bg-white p-12 text-center dark:border-red-900 dark:bg-zinc-900">
              <h2 class="text-xl font-semibold text-zinc-900 dark:text-white">No encontramos resultados</h2>
              <p class="mt-2 text-sm text-zinc-500 dark:text-zinc-400">
                Ajusta los filtros o la búsqueda para ver otros productos.
              </p>
            </div>
          )}

            
          <!-- Paginación -->
         <div class="flex flex-wrap items-center justify-center gap-2 max-w-full px-2 sm:px-0">
            {showLeftDots && (
              <>
                <a
                  href={buildQueryString({ page: 1 })}
                  class={`flex h-10 w-10 items-center justify-center rounded-full text-sm font-semibold transition ${
                    currentPage === 1
                      ? "bg-primary text-white"
                      : "bg-white text-zinc-700 hover:border-primary hover:text-primary dark:bg-zinc-900 dark:text-zinc-300"
                  }`}
                  aria-label="Página 1"
                >1</a>
                <span class="px-1 text-zinc-400">…</span>
              </>
            )}

            {pages.map((pageNumber) => {
              const isActive = pageNumber === currentPage;
              return (
                <a
                  href={buildQueryString({ page: pageNumber })}
                  class={`flex h-10 w-10 items-center justify-center rounded-full text-sm font-semibold transition ${
                    isActive
                      ? "bg-primary text-white"
                      : "bg-white text-zinc-700 hover:border-primary hover:text-primary dark:bg-zinc-900 dark:text-zinc-200"
                  }`}
                  aria-current={isActive ? "page" : undefined}
                >
                  {pageNumber}
                </a>
              );
            })}

            {showRightDots && (
              <>
                <span class="px-1 text-zinc-400">…</span>
                <a
                  href={buildQueryString({ page: totalPages })}
                  class={`flex h-10 w-10 items-center justify-center rounded-full text-sm font-semibold transition ${
                    currentPage === totalPages
                      ? "bg-primary text-white"
                      : "bg-white text-zinc-700 hover:border-primary hover:text-primary dark:bg-zinc-900 dark:text-zinc-200"
                  }`}
                  aria-label={`Página ${totalPages}`}
                >{totalPages}</a>
              </>
            )}
          </div>

        </section>
      </div>
    </article>
  </Container>
  
</BaseLayout>
