import BaseLayout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";
import Container from "../components/Container.astro";
import { getCategorias, getGlobalData, getMarcas, getProductos } from "../lib/api";

const ITEMS_PER_PAGE = 24;
const MAX_PRICE = 5000;
const MIN_PRICE = 0;
const SUGGESTIONS_LIMIT = 30;

const normalizeWithAttributes = (item: any) => (item?.attributes ? { id: item.id, ...item.attributes } : item);
const normalizeCollection = (collection: any[] = []) => collection.map(normalizeWithAttributes);

const url = new URL(Astro.request.url);

const searchParam = url.searchParams.get("search")?.toLowerCase().trim() ?? "";
const searchTerms = searchParam.split(/\s+/).filter(Boolean);
const normalizedSearchParam = searchTerms.join(" ");
const hasSearch = searchTerms.length > 0;
const categoryParam = url.searchParams.get("category") ?? "all";
const brandParam = url.searchParams.get("brand") ?? "all";
const pageParam = Number.parseInt(url.searchParams.get("page") ?? "1", 10);
const requestedPage = Number.isFinite(pageParam) && pageParam > 0 ? pageParam : 1;
const priceParamRaw = Number.parseInt(url.searchParams.get("price") ?? String(MAX_PRICE), 10);
const priceFilterValue = Number.isFinite(priceParamRaw)
  ? Math.min(Math.max(priceParamRaw, MIN_PRICE), MAX_PRICE)
  : MAX_PRICE;

const strapiBaseParams = new URLSearchParams({
  "pagination[page]": String(requestedPage),
  "pagination[pageSize]": String(ITEMS_PER_PAGE),
  sort: "nombre:asc",
});

const applySearchFilters = (params: URLSearchParams, terms: string[]) => {
  terms.forEach((term, index) => {
    params.set(`filters[$and][${index}][$or][0][nombre][$containsi]`, term);
    params.set(`filters[$and][${index}][$or][1][codigo][$containsi]`, term);
  });
};

if (categoryParam !== "all") {
  strapiBaseParams.set("filters[ID_Categoria][$eq]", categoryParam);
}

if (brandParam !== "all") {
  strapiBaseParams.set("filters[ID_Marca][$eq]", brandParam);
}

if (priceFilterValue < MAX_PRICE) {
  strapiBaseParams.set("filters[precio][$lte]", String(priceFilterValue));
}

const strapiParams = new URLSearchParams(strapiBaseParams);

if (searchTerms.length > 0) {
  applySearchFilters(strapiParams, searchTerms);
}

const suggestionParams = new URLSearchParams(strapiBaseParams);
suggestionParams.set("pagination[page]", "1");
suggestionParams.set("pagination[pageSize]", String(SUGGESTIONS_LIMIT));

const [productosResponse, categoriasResponse, marcasResponse, global, suggestionResponse] = await Promise.all([
  getProductos(strapiParams),
  getCategorias(),
  getMarcas(),
  getGlobalData(),
  getProductos(suggestionParams),
]);

const getStrapiFileUrl = (file: any) => {
  const data = file?.data ?? file;
  const url = data?.attributes?.url ?? data?.url;

  if (!url) return null;
  if (url.startsWith("http")) return url;

  return `${import.meta.env.VITE_STRAPI_URL ?? ""}${url}`;
};

const productos = normalizeCollection(productosResponse?.data ?? []);
const categorias = normalizeCollection(categoriasResponse?.data ?? []);
const marcas = normalizeCollection(marcasResponse?.data ?? []);
const suggestionProducts = normalizeCollection(suggestionResponse?.data ?? []);
const suggestionItems: { label: string; value: string }[] = [];
const seenSuggestionValues = new Set<string>();

suggestionProducts.forEach((producto) => {
  const nombre = producto?.nombre ?? "Producto sin nombre";
  const codigo = producto?.codigo ?? "";
  const value = codigo ? `${nombre} ${codigo}` : nombre;

  if (seenSuggestionValues.has(value)) return;

  seenSuggestionValues.add(value);
  suggestionItems.push({
    label: codigo ? `${nombre} • ${codigo}` : nombre,
    value,
  });
});

const paginationMeta = productosResponse?.meta?.pagination ?? {};
const totalPages = Math.max(1, paginationMeta.pageCount ?? 1);
const currentPage = Math.min(Math.max(paginationMeta.page ?? requestedPage, 1), totalPages);
const totalItems = paginationMeta.total ?? productos.length;

const buildQueryString = (updates: Record<string, string | number | null>) => {
  const params = new URLSearchParams(url.searchParams);

  Object.entries(updates).forEach(([key, value]) => {
    if (value === null || value === "") {
      params.delete(key);
      return;
    }
    params.set(key, String(value));
  });

  if ("page" in updates) {
    if (updates.page === null) {
      params.delete("page");
    } else {
      params.set("page", String(updates.page));
    }
  }

  const query = params.toString();
  return query ? `?${query}` : "";
};

const getRelationArray = (relation: any) => {
  const dataArray = Array.isArray(relation?.data) ? relation.data : relation?.data ? [relation.data] : relation;
  const values = Array.isArray(dataArray) ? dataArray : [dataArray];

  return values.filter(Boolean).map(normalizeWithAttributes);
};

const getParentRelation = (categoria: any) => getRelationArray(categoria?.padre_id)[0] ?? null;
const getChildrenRelations = (categoria: any) => getRelationArray(categoria?.hijo_id);

const formatCategoryItem = (categoria: any) => ({
  label: categoria?.nombre ?? "Sin nombre",
  value: categoria?.ID_Categoria ?? categoria?.id,
  image: getStrapiFileUrl(categoria?.cat_img),
});

const parentCategoryItems = categorias
  .filter((categoria) => !getParentRelation(categoria))
  .map((categoria) => ({
    ...formatCategoryItem(categoria),
    children: getChildrenRelations(categoria).map(formatCategoryItem),
  }))
  .filter((categoria) => categoria.children.length > 0);

const brandItems = marcas
  .map((marca) => ({
    label: marca?.nombre ?? "Sin nombre",
    value: marca?.ID_Marca ?? marca?.id,
    image: getStrapiFileUrl(marca?.logo ?? marca?.imagen),
  }))
  .filter((marca) => Boolean(marca.value));

const priceFormatter = new Intl.NumberFormat("es-PE", {
  style: "currency",
  currency: "USD",
  maximumFractionDigits: 0,
  minimumFractionDigits: 0,
});

//Paginacion
const maxVisible = 10;
const half = Math.floor(maxVisible / 2);

let startPage = Math.max(1, currentPage - half);
let endPage = startPage + maxVisible - 1;
if (endPage > totalPages) {
  endPage = totalPages;
  startPage = Math.max(1, endPage - maxVisible + 1);
}

const range = (a: number, b: number) => Array.from({ length: b - a + 1 }, (_, i) => a + i);
const pages = range(startPage, endPage);

const showLeftDots = startPage > 1;
const showRightDots = endPage < totalPages;



